# problem domain setup
-Dim 2 -Mx 100 -My 100

# problem parameter setup
-ft 0.001 -dt 0.01 -eta 1.0

# problem type
-EquationType Stokes

# linear solver setup
-ksp_type fgmres -ksp_monitor_true_residual 
-pc_type hypre -pc_fieldsplit_type schur -pc_fieldsplit_schur_fact_type lower
-pc_hypre_type boomeramg -pc_hypre_boomeramg_smooth_type euclid -pc_hypre_boomeramg_smooth_num_level 1 -pc_hypre_boomeramg_eu_level 1 -pc_hypre_boomeramg_eu_bj 1
-ksp_rtol 1e-5
-ksp_converged_reason